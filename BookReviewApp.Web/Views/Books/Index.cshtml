@using BookReviewApp.Web.Models.Book
@model IEnumerable<BookDisplayViewModel>

<h2>Books</h2>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary">Add Book</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Rating</th>
            <th>Reviews</th>
            <th></th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublishedYear</td>
                <td>@book.Genre</td>
                <td>@book.AverageRating</td>
                <td>@book.ReviewsCount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
