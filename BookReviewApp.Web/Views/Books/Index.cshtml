@model IEnumerable<BookViewModel>

<h2>Books</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Rating</th>
            <th>Reviews</th>
            <th></th> <!-- Actions column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublishedYear</td>
                <td>@book.Genre</td>
                <td>@book.AverageRating</td>
                <td>@book.ReviewsCount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-info">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@book.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
