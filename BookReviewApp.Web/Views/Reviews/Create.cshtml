@using BookReviewApp.Web.Models.Review
@model ReviewCreateViewModel
@{
    ViewData["Title"] = "Add Review";
}

<h2>Add Review</h2>

<form asp-action="Create" method="post">
    <input type="hidden" name="bookId" value="@ViewBag.BookId" />

    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Review</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
